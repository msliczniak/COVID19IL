set timefmt '%Y-%m-%d-%H'
set autoscale fix
set xtic 86400
set timefmt '%Y-%m-%d'
set grid
set xdata time
set xtics rotate by -55 format '%1m/%1d'
set x2data time
set x2tics rotate by 55 format '%1d.%1m'
set key outside horizontal top center
set ytics nomirror
set logscale y
set format y '10^{%T}'
set xlabel ARG1
set y2tics 12

set terminal dumb
set output '/dev/null'

plot [:][:] \
'dil' using 1:2 axis x1y2 with lines title ARG4.' hr doubling-time IL', \
'15il' using 1:2 axis x1y2 with points title '15 sample IL '.ARG8, \
'il' using 1:2 with linespoints title ARG2.' = IL '.ARG6, \
'dpl' using 1:2 axis x1y2 with lines title ARG5.' godz czas podwojenia PL', \
'15pl' using 1:2 axis x1y2 with points title '15 pr√≥b PL '.ARG9, \
'pl' using 1:2 with linespoints title ARG3.' = PL '.ARG7

# 86400 = 24 * 60 * 60; 2678400 = 31 * 86400
interval = int((GPVAL_X_MAX - GPVAL_X_MIN)/2678400) + 1
set xtics interval * 86400
set mxtics interval

set terminal pngcairo size 820,440
set output 'plil.png'

refresh
